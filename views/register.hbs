<form action="/register" method="POST">
    <style>
        .input {
            margin-bottom: 15px; 
            /*so text boxes aren't smushed together*/
        }

        .button {
            margin-top: 15px;

        }
    </style>
    <h2 class="title is-5 m-5 has-text-centered">Register</h2>

    <input class="input" name="email" type="email" placeholder="enter your email">

    <input class="input" name="username" type="text" placeholder="choose a username">

    <input class="input" type="password" name="password" placeholder="enter password">

    <button class="mt-3 button special-button is-success is-rounded">Submit</button>
</form>